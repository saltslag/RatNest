<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/floor">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="216dp"
            android:layout_height="105dp"
            android:id="@+id/playGameButton"
            android:layout_gravity="left|top"
            android:onClick="startGame"
            android:background="@drawable/play" />

        <ImageButton
            android:layout_width="227dp"
            android:layout_height="110dp"
            android:id="@+id/showRulesButton"
            android:layout_gravity="left|bottom"
            android:onClick="showRules"
            android:background="@drawable/rulez" />

        <ImageButton
            android:layout_width="227dp"
            android:layout_height="110dp"
            android:id="@+id/exitGameButton"
            android:layout_gravity="right|bottom"
            android:background="@drawable/exit"
            android:onClick="exitGame"/>

        <ImageButton
            android:layout_width="248dp"
            android:layout_height="78dp"
            android:id="@+id/showScoreButton"
            android:layout_gravity="right|top"
            android:background="@drawable/score"
            android:onClick="showScore"/>

    </FrameLayout>
</RelativeLayout>
